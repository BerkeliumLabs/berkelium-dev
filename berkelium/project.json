{
  "name": "berkelium",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "berkelium/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/berkelium",
        "main": "berkelium/src/index.ts",
        "tsConfig": "berkelium/tsconfig.lib.json",
        "assets": [],
        "project": "berkelium/package.json",
        "compiler": "babel",
        "format": ["cjs", "esm"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["berkelium/**/*.ts", "berkelium/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "berkelium/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
